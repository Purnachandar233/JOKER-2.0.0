# ============================================
# Discord Bot Configuration
# ============================================
# Your Discord bot token from https://discord.developer.com
TOKEN=your_discord_bot_token_here

# Command prefix (override default from config.json)
PREFIX==

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB connection URL for database
MONGODB_URL=your_mongodb_connection_string_here

# ============================================
# Logging Configuration
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Webhook URL for general logging
LOG_WEBHOOK_URL=https://discord.com/api/webhooks/webhook_id/webhook_token

# ============================================
# Discord Webhook URLs
# ============================================
# Webhook for guild join/leave events
GUILD_WEBHOOK_URL=https://discord.com/api/webhooks/webhook_id/webhook_token

# Webhook for owner command logs
OWNER_CMDS_WEBHOOK_URL=https://discord.com/api/webhooks/webhook_id/webhook_token

# Webhook for error logs
ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/webhook_id/webhook_token

# ============================================
# Lavalink Server Configuration - Multiple Nodes
# ============================================
# Primary Node
LAVALINK_NODE_1_HOST=localhost
LAVALINK_NODE_1_PORT=2333
LAVALINK_NODE_1_AUTH=youshallnotpass
LAVALINK_NODE_1_SECURE=false

# Secondary Node (optional)
LAVALINK_NODE_2_HOST=localhost
LAVALINK_NODE_2_PORT=2333
LAVALINK_NODE_2_AUTH=youshallnotpass
LAVALINK_NODE_2_SECURE=false

# Tertiary Node (optional)
LAVALINK_NODE_3_HOST=localhost
LAVALINK_NODE_3_PORT=2333
LAVALINK_NODE_3_AUTH=youshallnotpass
LAVALINK_NODE_3_SECURE=false

# ============================================
# Spotify API Configuration (for Lavalink Spotify Plugin)
# ============================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ============================================
# Top.gg Integration (optional)
# ============================================
# Get your token from https://top.gg
TOPGG_TOKEN=your_topgg_token_here

# ============================================
# Environment
# ============================================
# Node environment: production, development, staging
NODE_ENV=production
